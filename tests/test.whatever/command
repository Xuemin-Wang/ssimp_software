"$SSIMP"                                                                        \
    --ref "$REF"/sub1KG-tiny/chr{CHRM}.vcf.gz                                          \
    --wind 300000                                                               \
    --gwas "$GWAS"/GIANT_HEIGHT_Wood_et_al_2014_publicrelease_HapMapCeuFreq.txt.gz  \
    --out ${OUT_IMPUTATIONS}                                                    \
    --lambda 0.01                                                               \
    --impute.range chr8-chr9                                                    \
    --_debug_build_chr 8 --_debug_build_chr 9                                       \
    > "$OUTPUT"
