    tests/${testname}/output.actual
:       bin/ssimp
    tests/${testname}/command
{
    export SSIMP="$(readlink -f bin/ssimp)" # store the full path, in order that it works after 'cd'
    export   REF="$(readlink -f ref)"
    export  GWAS="$(readlink -f gwas)"
    cd    "tests/${testname}"
    export OUTPUT=output.actual.tmp
    export OUT_IMPUTATIONS=imputations.txt
    bash command
    mv output.actual.tmp output.actual
}
